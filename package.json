{
  "name": "node-script-boilerplate",
  "description": "this repository is boilerplate for simply node scripts. it contains TypeScript, Prettier, ESLint, and Jest.",
  "version": "1.0.0",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^3.4.0",
    "@typescript-eslint/parser": "^3.4.0",
    "eslint": "7.3.1",
    "eslint-config-prettier": "6.11.0",
    "eslint-plugin-jest": "^23.17.1",
    "eslint-plugin-prettier": "3.1.4",
    "jest": "^26.1.0",
    "prettier": "2.0.5",
    "ts-jest": "^26.1.1",
    "typescript": "3.9.5",
    "@types/jest": "^26.0.3"
  },
  "scripts": {
    "test": "jest",
    "lint": "eslint --fix './?(src|test)/**/*.?(js|ts)'",
